#!/usr/bin/make -f
#export DH_VERBOSE = 1

VERSION ?= $(shell dpkg-parsechangelog |\
	     sed -rne 's/^Version: ([0-9.]+)[-+].*$$/\1/p')

%:
	dh $@

override_dh_install:
	mkdir -p debian/tmp/usr/src/evdi-$(VERSION)
	dh_install -pevdi-dkms src/ usr/src/evdi-$(VERSION)
	dh_install -pevdi-dkms debian/modules.d usr/share/initramfs-tools/
	dh_dkms -V $(VERSION)
	dh_install
